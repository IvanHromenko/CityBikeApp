@model Trip

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add new trip</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="DepartureStationName" class="pb-0"></label>
            <input asp-for="DepartureStationName" class="form-control" />
            <span asp-validation-for="DepartureStationName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary"> Add </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
